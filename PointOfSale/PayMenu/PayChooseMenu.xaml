<UserControl x:Class="PointOfSale.PayMenu.PayChooseMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.PayMenu"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="uxCredit" Click="uxCredit_Click" FontSize="60">Credit / Debit</Button>
        <Button x:Name="uxCash" Grid.Column="1" Click="uxCash_Click" FontSize="60">Cash</Button>
    </Grid>
</UserControl>
