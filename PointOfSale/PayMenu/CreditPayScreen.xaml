             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.PayMenu"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button FontSize="100" x:Name="uxSwipe" Click="uxSwipe_Click">Swipe card</Button>
        <Button FontSize="40" x:Name="uxBack" Click="uxBack_Click" FontFamily="Courier New" Grid.Row="1" Background="Azure">&lt;-- Back</Button>
