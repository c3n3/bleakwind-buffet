<UserControl x:Class="PointOfSale.Selector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" Height="200" Width="200"
             MouseLeave="UserControl_MouseLeave"
             ClipToBounds="False"
             >
    <Grid Margin="10, 10, 10, 10" x:Name="container" ClipToBounds="False" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid x:Name="options" ClipToBounds="False">
            
        </Grid>
        <Border x:Name="border" ClipToBounds="False">
            <Ellipse x:Name="ellipse" Fill="Black" MouseLeftButtonDown="ellipse_MouseLeftButtonDown">
            </Ellipse>
        </Border>
        <Label x:Name="key" Foreground="Red" HorizontalAlignment="Center" VerticalAlignment="Center" MouseLeftButtonDown="ellipse_MouseLeftButtonDown" FontSize="40">Label</Label>
    </Grid>
</UserControl>
