<UserControl x:Class="PointOfSale.Orders"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" Background="White">
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="279*"/>
            <RowDefinition Height="44*"/>
            <RowDefinition Height="41*"/>
        </Grid.RowDefinitions>
        <Label Content="Orders" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="210" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <StackPanel x:Name="uxOrderStack" Margin="0,10,0,0" Grid.Row="1"/>
        <Button x:Name="uxClearOrders" Click="uxClearOrders_Click" Content="Clear" HorizontalAlignment="Center" Margin="64,14,72,10" Grid.Row="2" VerticalAlignment="Center" Width="74"/>
        <Label x:Name="uxPrice" Content="Label" HorizontalAlignment="Left" Height="31" Margin="10,0,0,0" Grid.Row="3" VerticalAlignment="Top" Width="188" MinHeight="50"/>
    </Grid>
</UserControl>
